<%- include('header') -%>

<h1>Innskráning</h1>
<form method="post" action="/admin/login">
    <div class="field">
      <label for="username">Notendanafn </label>
      <input type="text" name="username">
    </div>
    <div class="field">
      <label for="password">Lykilorð </label>
      <input type="text" name="password">
    </div>
    <div class="errors">
      <p><%= message %></p>
    </div>
    <div class="button">
      <button>Innskrá</button>
    </div>
</form>

<a href="/">Til baka</a>

